
<section class="instafeed_wrapper">
  <div class="instafeed">
    <div class="insta_head">
      {% if section.settings.heading != blank %}
      <h3 class="w720 h3">{{ section.settings.heading }}</h3>
        {% endif %}
    </div>
    <div class="instafeed_container">
      {% for block in section.blocks %}
      {%- case block.type -%}

      {%- when 'block' -%}
      <a href="{{ block.settings.link }}">
      <div class="insta_img one">
        {% if block.settings.insta_img != blank %}
        <img src="{{ block.settings.insta_img | img_url: 'original' }}" alt="{{ block.settings.insta_img.alt }}">
        {% endif %}
       
      </div>
         </a>

      {%- when 'blocktwo' -%}
         <a href="{{ block.settings.link }}">
      <div class="two_images">
       
        <div class="insta_img">
        
          {% if block.settings.first_img != blank %}
          <img src="{{ block.settings.first_img | img_url: 'original' }}" alt="{{ block.settings.first_img.alt }}">
          {% endif %}
        </div>

        <div class="insta_img">
          {% if block.settings.second_img != blank %}
          <img src="{{ block.settings.second_img | img_url: 'original' }}" alt="{{ block.settings.second_img.alt }}">
          {% endif %}
       </div>
       
      </div> 
         </a>

      {%- when 'blockthree' -%}
        <a href="{{ block.settings.link }}">
      <div class="three_images">
       
        <div class="insta_img">
          {% if block.settings.tfirst_img != blank %}
          <img src="{{ block.settings.tfirst_img | img_url: 'original' }}" alt="{{ block.settings.tfirst_img.alt }}">
          {% endif %}
        </div>

        <div class="insta_img">
          {% if block.settings.tsecond_img != blank %}
          <img src="{{ block.settings.tsecond_img | img_url: 'original' }}" alt="{{ block.settings.tsecond_img.alt }}">
          {% endif %}
        </div>

        <div class="insta_img">
          {% if block.settings.tthird_img != blank %}
          <img src="{{ block.settings.tthird_img | img_url: 'original' }}" alt="{{ block.settings.tthird_img.alt }}">
          {% endif %}
        </div>
      
      </div>
           </a>

      {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Instafeed",
    "settings": [
      {
      "type" : "text",
      "id" : "heading",
      "label" : "Heading"
    }
    ],
    "blocks" : [
      {
        "type" : "block",
        "name" : "Image",
        "settings": [
          {
            "type" : "image_picker",
            "id" : "insta_img",
            "label" : "Add Instafeed"
          },
          {
            "type" : "url",
            "id" : "link",
            "label" : "Add block URL"
          }
          
        ]
      },
        {
        "type" : "blocktwo",
        "name" : "Two image",
        "settings": [
          {
            "type" : "image_picker",
            "id" : "first_img",
            "label" : "First image"
          },
          {
            "type" : "image_picker",
            "id" : "second_img",
            "label" : "Second image"
          },
          {
            "type" : "url",
            "id" : "link",
            "label" : "Add block URL"
          }
        ]
      },
      {
        "type" : "blockthree",
        "name" : "Three image",
        "settings": [
          {
            "type" : "image_picker",
            "id" : "tfirst_img",
            "label" : "First image"
          },
          {
            "type" : "image_picker",
            "id" : "tsecond_img",
            "label" : "Second image"
          },
          {
            "type" : "image_picker",
            "id" : "tthird_img",
            "label" : "Third image"
          },
          {
            "type" : "url",
            "id" : "link",
            "label" : "Add block URL"
          }
        ]
      }
    ],
      "presets": [
        {
            "name": "Instafeed"
        }
    ]
  }
{% endschema %}



